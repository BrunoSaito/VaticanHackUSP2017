<div class="container">
<h1>Formulário</h1>

<%= form_with scope: :document, url: documents_path, local: true do |form| %>
  <p>
    <%= form.label :nome %><br>
    <%= form.text_field :nome, class: "form-control" %>
  </p>
 
  <p>
    <%= form.label :pais %><br>
    <%= form.text_field :pais, class: "form-control" %>
  </p>
 
  <p>
    <%= form.label :endereco %><br>	
    <%= form.text_field :endereco, class: "form-control" %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, class: "form-control" %>
  </p>

  <p>
    <%= form.label :motivo %><br>
    <%= form.radio_button :motivo, "Conflitos militares" %>
	<%= form.label :motivo1, "Conflitos militares" %><br>
	<%= form.radio_button :motivo, "Discriminação sexual"  %>
	<%= form.label :motivo2, "Discriminação sexual" %><br>
	<%= form.radio_button :motivo, "Perseguição religiosa"  %>
	<%= form.label :motivo2, "Perseguição religiosa" %><br>
	<%= form.radio_button :motivo, "Catástrofe natural"  %>
	<%= form.label :motivo2, "Catástrofe natural" %><br>
	<%= form.radio_button :motivo, "Discriminação racial"  %>
	<%= form.label :motivo2, "Discriminação racial" %><br>
	<%= form.radio_button :motivo, "Perseguição política"  %>
	<%= form.label :motivo2, "Perseguição política" %>
  </p>

  <p >
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </p>
<% end %>
</div>